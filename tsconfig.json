{
	"extends": "@blake.regalia/tsconfig/tsconfig.web.json",

	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",

		"declaration": true,
		"declarationDir": "dist",

		"module": "ESNext",

		"paths": {
			"nfpx:*?tag=latest": ["./dist/*.d.ts"],
			"nfpx:*?tag=1.x": ["./dist/*.d.ts"],
			"nfpx:*": ["./dist/*.d.ts"],
		},

		"moduleResolution": "Bundler"
	},

	"include": [
		"app/**/*.ts",
		"app/**/*.js",
		"app/**/*.svelte",
		"bootloader/**/*.ts",
		"applibs/**/*.ts",
		"contract/**/*.ts",
		"test/**/*.ts",
		"*.ts",
		".eslintrc.cjs"
	],

	"ts-node": {
		"experimentalSpecifierResolution": "node"
	},
}