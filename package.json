{
  "name": "basic",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build:bootloader": "rollup -c bootloader/rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "dev:bootloader": "yarn build:bootloader --environment NODE_ENV:development",
    "build:svg": "node build.mjs",
    "dev:svg": "NODE_ENV=development yarn build:svg -la -o dist/nfp.dev.svg",
    "build:nfp": "yarn build:bootloader && yarn build:svg",
    "dev:nfp": "yarn dev:bootloader && yarn dev:svg",
    "build:app": "vite build app",
    "dev:app": "NODE_ENV=development yarn build:app --mode development",
    "watch:app": "yarn dev:app -w",
    "deploy:app": "node --loader ts-node/esm deploy.ts",
    "build:applibs": "rollup -c applibs/rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "dev:applibs": "yarn build:applibs --environment NODE_ENV:development",
    "build": "yarn build:applibs && yarn build:app && yarn build:nfp",
    "dev": "yarn dev:applibs && yarn dev:app && yarn dev:nfp && echo \"\\n-------- READY --------\\n\"",
    "watch:dev": "ls {app,applibs,bootloader,media}/**/*.* package.json build.ts | entr yarn dev",
    "watch:build": "ls {app,applibs,bootloader,media}/**/*.* package.json build.ts | entr yarn build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@blake.regalia/belt": "^0.12.0",
    "@blake.regalia/eslint-config-elite": "^0.2.8",
    "@blake.regalia/tsconfig": "^0.1.2",
    "@nfps.dev/rollup-plugin-microweb": "^0.3.5",
    "@nfps.dev/sdk": "^0.3.0",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-typescript": "^11.1.1",
    "@types/node": "^20.2.1",
    "@types/web": "^0.0.99",
    "@typescript-eslint/parser": "^5.59.6",
    "dotenv": "^16.0.3",
    "eslint": "^8.41.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "less": "^4.1.3",
    "rollup": "^3.22.0",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "svelte": "^3.59.1",
    "svelte-check": "^3.3.2",
    "svelte-preprocess": "^5.0.3",
    "ts-node": "^10.9.1",
    "ts-toolbelt": "^9.6.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.8",
    "xml-formatter": "^3.4.1",
    "yargs": "^17.7.2"
  },
  "dependencies": {
    "@nfps.dev/runtime": "^0.8.0",
    "@solar-republic/neutrino": "^0.3.7",
    "@sveltejs/vite-plugin-svelte": "^2.2.0",
    "D": "^1.0.0"
  }
}
