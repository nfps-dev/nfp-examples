{
  "name": "basic",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "build:bootloader": "rollup -c bootloader/rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "dev:bootloader": "yarn build:bootloader --environment NODE_ENV:development",
    "build:svg": "node build.mjs",
    "dev:svg": "NODE_ENV=development yarn build:svg -la -o dist/nfp.dev.svg",
    "build:nfp": "yarn build:bootloader && yarn build:svg",
    "dev:nfp": "yarn dev:bootloader && yarn dev:svg",
    "build:app": "vite build app",
    "dev:app": "NODE_ENV=development yarn build:app --mode development",
    "watch:app": "yarn dev:app -w",
    "deploy:app": "node deploy.mjs",
    "build": "yarn build:nfp && yarn build:app",
    "dev": "yarn dev:nfp && yarn dev:app",
    "watch:dev": "ls {app,bootloader,media}/**/*.* build.mjs | entr yarn dev",
    "watch:build": "ls {app,bootloader,media}/**/*.* build.mjs | entr yarn build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@blake.regalia/belt": "^0.6.3",
    "@blake.regalia/eslint-config-elite": "^0.2.7",
    "@blake.regalia/tsconfig": "^0.1.2",
    "@nfps.dev/rollup-plugin-microweb": "^0.3.5",
    "@nfps.dev/sdk": "^0.3.0",
    "@rollup/plugin-typescript": "^11.1.1",
    "@types/node": "^20.2.1",
    "@types/web": "^0.0.99",
    "@typescript-eslint/parser": "^5.59.6",
    "dotenv": "^16.0.3",
    "eslint": "^8.40.0",
    "rollup": "^3.22.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.8",
    "xml-formatter": "^3.4.1",
    "yargs": "^17.7.2"
  },
  "dependencies": {
    "@nfps.dev/runtime": "^0.2.0",
    "@solar-republic/neutrino": "^0.2.1"
  }
}
